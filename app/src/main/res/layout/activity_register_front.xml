<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFrontActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/new_shopkeeper_pic"
        android:src="@drawable/person"
        android:scaleType="fitXY"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:background="@android:color/holo_blue_bright"
        />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_shopkeeper_pic"
        >

        <EditText
            android:id="@+id/new_shopkeeper_name"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:inputType="text"
            android:hint="Name"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_design"
            android:textSize="20sp"
            android:fontFamily="@font/robotolightitalic"
            android:textColorHint="#000000"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative">

        <EditText
            android:id="@+id/new_shopkeeper_pin"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:inputType="numberPassword"
            android:hint="Pin Number"
            android:drawableLeft="@drawable/ic_input_lock"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_design"
            android:textSize="20sp"
            android:fontFamily="@font/robotolightitalic"
            android:textColorHint="#000000"
            />

        <ImageView
            android:id="@+id/show_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visibility_off"
            android:layout_alignParentRight="true"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative1">

        <EditText
            android:id="@+id/new_shopkeeper_confirm_pin"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:hint="Confirm Pin"
            android:inputType="numberPassword"
            android:background="@drawable/edittext_design"
            android:textSize="20sp"
            android:fontFamily="@font/robotolightitalic"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_input_lock"
            android:drawablePadding="10dp"
            />


        <ImageView
            android:id="@+id/show_confirmed_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visibility_off"
            android:layout_alignParentEnd="true"
            android:paddingEnd="40dp"
            android:paddingTop="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/relative2">

        <CheckBox
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept all the "
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/terms_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/terms"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>



    <Button
        android:textSize="20sp"
        android:textColor="#fff"
        android:id="@+id/create_account_btn"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_blue"
        android:layout_alignParentBottom="true"
        android:text="Create Account"
        android:fontFamily="@font/ethnocentric"
        android:elevation="0dp" />

</RelativeLayout>